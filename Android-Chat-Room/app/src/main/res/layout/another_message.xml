<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingLeft="15dp"
    android:paddingRight="60dp">

    <TextView
        android:id="@+id/message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:background="@drawable/other_message"
        android:elevation="2dp"
        android:text="How are you doing? This is a long message that should probably wrap."
        android:textColor="#000000"
        android:textSize="@dimen/default_message_text_size" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_body"
        android:layout_centerHorizontal="true"
        android:text="1997/99/99"
        android:textColor="#FF8C00"
        android:textSize="@dimen/default_timestamp_text_size" />
</RelativeLayout>